<h2> Edit your sneaker </h2>

<form action='/sneakers/<%=@sneaker.id%>' method="POST">
    <input type='hidden' type='hidden' name='_method' value='PATCH'>
    <label for='brand'>Brand:</label>
    <input type='text' id='brand' name='brand' value="<%=@sneaker.brand%>" required><br>
    <label for='model'>Model:</label>
    <input type='text' id='model' name='model' value="<%=@sneaker.model%>" required><br>
    <label for='colorway'>Colorway:</label>
    <input type='text' id='colorway' name='colorway' value="<%=@sneaker.colorway%>" required><br>
    <label for='cost'>Cost:</label>
    <input type='number' id='cost' name='cost' value="<%=@sneaker.cost%>" required><br>
    <input type='submit' id='submit' value='Save Edit'>
</form>
<form action="/sneakers/<%=@sneaker.id%>/delete" method="POST">
    <input id='hidden' type='hidden' name='_method' value='DELETE'>
    <input type='submit' value='Delete Sneaker'>
</form>
